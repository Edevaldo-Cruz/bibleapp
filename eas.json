{
    "cli": {
      "version": ">= 3.1.0"
    },
    "build": {
      "production": {
        "distribution": "store",
        "android": {
          "buildType": "apk"
        },
        "ios": {
          "simulator": false
        }
      },
      "preview": {
        "distribution": "internal",
        "android": {
          "buildType": "apk"
        },
        "ios": {
          "simulator": true
        }
      }
    },
    "submit": {
      "production": {
        "android": {
          "serviceAccountKeyPath": "./path/to/service-account.json"
        },
        "ios": {
          "ascAppId": "123456789"
        }
      }
    }
  }
  